{
  "name": "@digitalcheck/tool-finder",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "homepage": "https://digitalservicebund.github.io/digitalcheck-apps/",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preserve": "vite build",
    "start": "vite preview",
    "clean": "rm -rf dist/",
    "format:check": "prettier --check .",
    "format:fix": "prettier --write --ignore-unknown .",
    "lint:check": "eslint --ext .js,.ts --cache --ignore-path ../../.gitignore .",
    "lint:fix": "npm run lint:check -- --fix",
    "test": "jest test",
    "test:e2e": "playwright test --config=test/e2e/playwright.config.ts",
    "test:a11y": "playwright test --config=test/a11y/playwright.config.ts",
    "tests": "npm run build && npm run test && npm run test:e2e && npm run test:a11y",
    "typecheck": "tsc"
  },
  "dependencies": {
    "react-hook-form": "^7.50.1",
    "react-router-dom": "^6.22.1"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
