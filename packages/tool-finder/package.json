{
  "name": "@digitalcheck/tool-finder",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "homepage": "https://digitalservicebund.github.io/digitalcheck-apps/",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preserve": "vite build",
    "start": "vite preview",
    "clean": "rm -rf dist/",
    "format:check": "prettier --check .",
    "format:fix": "prettier --write --ignore-unknown .",
    "lint:check": "eslint --cache --ignore-path ../../.gitignore .",
    "lint:fix": "npm run lint:check -- --fix",
    "test": "vitest",
    "test:e2e": "playwright test tests/e2e --config=tests/playwright/playwright.config.ts",
    "test:a11y": "playwright test tests/a11y --config=tests/playwright/playwright.config.ts",
    "tests": "vitest run && npm run test:e2e && npm run test:a11y",
    "typecheck": "tsc"
  },
  "dependencies": {
    "react-hook-form": "^7.52.0",
    "react-router-dom": "^6.22.1"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
