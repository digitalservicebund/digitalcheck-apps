{
  "name": "digitalcheck-dito",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "homepage": "https://digitalservicebund.github.io/digitalcheck-apps/",
  "scripts": {
    "dev": "remix dev --manual",
    "build": "remix build",
    "start": "remix-serve ./build/index.js",
    "clean": "rm -rf build/",
    "test": "jest test",
    "test:e2e": "playwright test --config=tests/e2e/playwright.config.ts",
    "test:a11y": "playwright test --config=tests/a11y/playwright.config.ts",
    "tests": "npm run build && npm run test && npm run test:e2e && npm run test:a11y",
    "test:generate-coverage": "jest --coverage"
  },
  "devDependencies": {
    "@remix-run/dev": "^2.8.1",
    "@remix-run/eslint-config": "^2.8.1"
  },
  "dependencies": {
    "@remix-run/css-bundle": "^2.9.1",
    "@remix-run/node": "^2.9.1",
    "@remix-run/react": "^2.9.1",
    "@remix-run/serve": "^2.9.1",
    "isbot": "^5.1.4"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
