{
  "name": "digitalcheck-apps",
  "private": true,
  "homepage": "https://digitalservicebund.github.io/digitalcheck-apps/",
  "sideEffects": false,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "clean": "npm run clean --workspaces --if-present",
    "dev:dito": "npm run dev --workspace=packages/dito",
    "dev:tool-finder": "npm run dev --workspace=packages/tool-finder",
    "test": "npm run test --workspaces",
    "test:e2e": "npm run test:e2e --workspaces --if-present",
    "test:a11y": "npm run test:a11y --workspaces --if-present",
    "tests": "npm run tests --workspaces",
    "test:generate-coverage": "npm run test:generate-coverage --workspaces --if-present",
    "audit:licences": "license-checker --production --excludePrivatePackages --onlyAllow 'MIT;BSD-3-Clause;BSD-2-Clause;ISC;Apache-2.0;BlueOak-1.0.0' --summary",
    "format:check": "prettier --check .",
    "format:fix": "prettier --write --ignore-unknown .",
    "lint:check": "eslint --cache --ignore-path .gitignore .",
    "lint:fix": "npm run lint:check -- --fix",
    "pre-commit": "npm run build && npm run style:fix && npm run tests && npm run typecheck",
    "style:check": "npm run format:check && npm run lint:check",
    "style:fix": "npm run format:fix && npm run lint:fix",
    "typecheck": "npm run typecheck --workspaces",
    "docker": "sh docker.sh",
    "docker:dito": "sh docker.sh dito",
    "docker:tool-finder": "sh docker.sh tool-finder"
  },
  "dependencies": {
    "@digitalcheck/shared": "*",
    "@digitalservice4germany/angie": "^1.1.1",
    "@digitalservice4germany/style-dictionary": "^2.0.0",
    "@digitalservicebund/icons": "^2.0.0",
    "@rvf/remix": "^0.0.16",
    "@rvf/zod": "^0.0.16",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "unleash-client": "^6.1.0",
    "vite-plugin-static-copy": "^1.0.5",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.9.1",
    "@commitlint/types": "^19.0.3",
    "@playwright/test": "^1.45.1",
    "@testing-library/jest-dom": "^6.4.6",
    "@types/node": "^22.0.0",
    "@types/react": "^18.2.18",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@vitejs/plugin-react": "^4.3.0",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-playwright": "^1.6.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "eslint-plugin-testing-library": "^6.2.0",
    "license-checker": "^25.0.0",
    "playwright": "^1.41.2",
    "prettier": "^3.2.5",
    "prettier-plugin-organize-imports": "^4.0.0",
    "tailwindcss": "^3.3.4",
    "ts-node": "^10.9.1",
    "typescript": "^5.5.2",
    "vite": "^5.3.1",
    "vite-tsconfig-paths": "^4.3.2",
    "vitest": "^2.0.1"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
