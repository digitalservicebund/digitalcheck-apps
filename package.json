{
  "name": "digitalcheck-apps",
  "private": true,
  "homepage": "https://digitalservicebund.github.io/digitalcheck-apps/",
  "sideEffects": false,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "clean": "npm run clean --workspaces --if-present",
    "dev:dito": "npm run dev --workspace=packages/dito",
    "dev:tool-finder": "npm run dev --workspace=packages/tool-finder",
    "test": "npm run test --workspaces",
    "test:e2e": "npm run test:e2e --workspaces --if-present",
    "test:e2e-ci": "npm run test:e2e-ci --workspaces --if-present",
    "test:a11y": "npm run test:a11y --workspaces --if-present",
    "test:a11y-ci": "npm run test:a11y-ci --workspaces --if-present",
    "tests": "npm run tests --workspaces",
    "tests-ci": "npm run tests-ci --workspaces",
    "test:generate-coverage": "npm run test:generate-coverage --workspaces --if-present",
    "audit:licences": "license-checker --production --excludePrivatePackages --summary",
    "format:check": "prettier --check .",
    "format:fix": "prettier --write --ignore-unknown .",
    "lint:check": "eslint --cache --ignore-path .gitignore .",
    "lint:fix": "npm run lint:check -- --fix",
    "pre-commit": "npm run build && npm run style:fix && npm run tests && npm run typecheck",
    "style:check": "npm run format:check && npm run lint:check",
    "style:fix": "npm run format:fix && npm run lint:fix",
    "typecheck": "npm run typecheck --workspaces",
    "docker": "docker compose up --build",
    "docker:dito": "docker compose up dito --build",
    "docker:tool-finder": "docker compose up tool-finder --build"
  },
  "dependencies": {
    "@digitalcheck/shared": "*",
    "@digitalservice4germany/angie": "^1.2.0",
    "@digitalservice4germany/style-dictionary": "^2.0.0",
    "@digitalservicebund/icons": "^2.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwind-merge": "^2.6.0",
    "unleash-client": "^6.4.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.0",
    "@commitlint/types": "^19.5.0",
    "@playwright/test": "^1.50.0",
    "@testing-library/jest-dom": "^6.6.1",
    "@types/node": "^22.10.0",
    "@types/react": "^18.2.18",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^8.21.0",
    "@typescript-eslint/parser": "^8.21.0",
    "@vitejs/plugin-react": "^4.3.0",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.0.1",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-playwright": "^2.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react": "^7.37.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "eslint-plugin-tailwindcss": "^3.18.0",
    "eslint-plugin-testing-library": "^7.0.0",
    "license-checker": "^25.0.0",
    "prettier": "^3.4.1",
    "prettier-plugin-organize-imports": "^4.1.0",
    "tailwindcss": "^3.3.4",
    "ts-node": "^10.9.1",
    "typescript": "^5.7.2",
    "vite": "^5.4.14",
    "vite-plugin-static-copy": "^2.2.0",
    "vite-tsconfig-paths": "^5.1.0",
    "vitest": "^3.0.1"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
