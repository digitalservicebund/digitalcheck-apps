{
  "name": "digitalcheck-apps",
  "private": true,
  "homepage": "https://digitalservicebund.github.io/digitalcheck-apps/",
  "sideEffects": false,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "clean": "npm run clean --workspaces --if-present",
    "test": "npm run test --workspaces",
    "test:e2e": "npm run test:e2e --workspaces --if-present",
    "test:a11y": "npm run test:a11y --workspaces --if-present",
    "tests": "npm run tests --workspaces --if-present",
    "test:generate-coverage": "npm run test:generate-coverage --workspaces --if-present",
    "audit:licences": "license-checker --production --excludePrivatePackages --onlyAllow 'MIT;BSD-3-Clause;ISC;Apache-2.0;BlueOak-1.0.0' --summary",
    "format:check": "prettier --check .",
    "format:fix": "prettier --write --ignore-unknown .",
    "lint:check": "eslint --ext .js,.ts --cache --ignore-path .gitignore .",
    "lint:fix": "npm run lint:check -- --fix",
    "pre-commit": "npm run style:fix && npm run tests && npm run typecheck",
    "style:check": "npm run format:check && npm run lint:check",
    "style:fix": "npm run format:fix && npm run lint:fix",
    "typecheck": "npm run typecheck --workspaces"
  },
  "dependencies": {
    "@digitalcheck/shared": "*",
    "@digitalservice4germany/angie": "^1.1.1",
    "@digitalservice4germany/style-dictionary": "^2.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.4.3"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.9.0",
    "@playwright/test": "^1.44.0",
    "@testing-library/jest-dom": "^6.4.2",
    "@types/jest": "^29.5.7",
    "@types/node": "^20.12.2",
    "@types/react": "^18.2.18",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^7.9.0",
    "@typescript-eslint/parser": "^7.9.0",
    "@vitejs/plugin-react": "^4.2.0",
    "autoprefixer": "^10.4.16",
    "axe-playwright": "^2.0.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jest": "^28.5.0",
    "eslint-plugin-playwright": "^1.6.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "eslint-plugin-testing-library": "^6.2.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "license-checker": "^25.0.1",
    "playwright": "^1.41.2",
    "prettier": "3.2.5",
    "prettier-plugin-organize-imports": "^3.2.4",
    "tailwindcss": "^3.3.4",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.4.5",
    "vite": "^5.2.6",
    "vite-tsconfig-paths": "^4.3.2"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
